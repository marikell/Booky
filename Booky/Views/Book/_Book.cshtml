<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-2"></div>
    <div class="col-md-2 col-lg-6">

        <div class="form-group">
            <label for="txtTitle">Título:</label>
            <input type="text" class="form-control" id="Title" size="50">
        </div>

        <div class="form-group">
            <label for="txtAuthor">Autor:</label>
            <input type="text" class="form-control" id="Author">
        </div>

        <div class="form-group">
            <label for="txtBookPublisher">Editora:</label>
            <input type="text" class="form-control" id="BookPublisher">
        </div>

        <div class="form-group">
            <label for="txtDescription">Descrição:</label>
            <textarea class="form-control" rows="5" id="Description"></textarea>
        </div>

        <div class="form-group">
            <label for="nudStockQty">Quantidade no Estoque:</label>
            <input type="number" class="form-control" id="StockQty">
        </div>

        <div class="form-group">
            <label for="nudPrice">Preço:</label>
            <input type="number" class="form-control" id="Price" min="0" step="0.01" placeholder="0.00">
        </div>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3"></div>

</div>
<br />
<br />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-2"></div>
    <div class="col-md-2">
        <button class="btn btn-default" type="submit" id="btnSave" onclick="save()">Salvar</button>

    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3"></div>
</div>
<br />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-2"></div>
    <div class="col-md-2">
        <a href="/Book/Index" class="btn btn-default" id="btnList">Listar</a>

    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3"></div>
</div>
<br />

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-2"></div>
    <div class="col-md-2">
        <a href="/Home/Index" class="btn btn-default" id="btnLeave">Sair</a>

    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3"></div>
</div>
<br />
<br />

<script>
    function save() {

        var type = '@ViewBag.Type';

        saveBook(type);
    }
</script>
